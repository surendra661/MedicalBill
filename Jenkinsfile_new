pipeline {
    agent any

    tools {
        maven 'mymaven'
    }

    stages {
        stage('Code') {
            steps {
                git(
                    branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/surendra661/MedicalBill.git'
                )
            }
        }

        stage('Build') {
            steps {
                echo "Building project with Maven"
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                echo "Running unit tests"
                sh 'mvn test'
            }
        }

        stage('CQA') {
            steps {
                withSonarQubeEnv('mysonar') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=suri -Dsonar.projectName="suri-project"'
                }
            }
        }
    }
}
